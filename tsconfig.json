{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@config/*": ["./src/config/*"],
      "@helpers/*": ["./src/helpers/*"]
    }
  },
  "include": ["./src/config/*", "./src/helpers/*", "./src/main.ts"],
  "exclude": ["./node_modules", "./dist", "./src/db/*"]
}
